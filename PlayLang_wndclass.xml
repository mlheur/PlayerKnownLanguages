<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<windowclass name="PlayLang_wndclass">
		<frame>utilitybox</frame>
		<placement>
			<size width="440" height="680" />
			<nosave />
		</placement>
		<sizelimits>
			<dynamic />
			<minimum width="400" height="400" />
		</sizelimits>
		<sheetdata>
			<windowtitlebar name="title">
				<resource>window_title_PlayLang</resource>
			</windowtitlebar>
			<anchor_content_utilitybox_top />
			<anchor_content_utilitybox_bottom />
			<windowmenubar_utilitybox />
			<resize_utilitybox />
			<windowlist name="list">
				<activate /><nodrag /><nodrop />
				<frame name="groupbox" offset="0,12,0,12" />
				<anchored to="contentanchor">
					<top offset="12"/>
					<left/>
					<bottom parent="bottomanchor" anchor="top" offset="-12"/>
					<right/>
				</anchored>
				<class>PlayLang_item</class>
				<datasource>languages</datasource>
			</windowlist>
			<scrollbar name="list_scrollbar">
				<anchored to="list" />
				<target name="list"/>
			</scrollbar>
		</sheetdata>
	</windowclass>

	<windowclass name="PlayLang_item">
		<sheetdata>
			<anchor_listitem_left/>
			<anchor_listitem_right/>
			<string_listitem_left_noframe_static name="name">
				<activate />
				<right />
				<font>sheetlabel</font>
				<anchored merge="replace" width="90">
					<left offset="22"/>
					<top offset="6"/>
				</anchored>
				<script file="PlayLang_item.lua"/>
			</string_listitem_left_noframe_static>
			<stringc_listitem_center_static name="speakers">
				<left />
				<anchored>
					<left parent="name" anchor="right" offset="10" />
					<right offset="-15"/>
				</anchored>
			</stringc_listitem_center_static>
		</sheetdata>
	</windowclass>
</root>